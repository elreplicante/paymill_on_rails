  <div id="plans">
    <h1>Awesome Plans</h1>
    <% @plans.each do |plan| %>
      <!-- div class="plan" -->
      <div class="span2">
        <div class="name"><%= plan.name %></div>
        <div class="details">
          <div class="price">
            <%= number_to_currency plan.price, unit: "â‚¬" %>
          </div>
          <div class="per_month">per month</div>
          <div class="signup">
            <%= link_to "Sign up", new_subscription_path(:plan_id => plan.id), :class => 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>

